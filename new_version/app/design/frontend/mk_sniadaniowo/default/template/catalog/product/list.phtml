        url += 'isAjax/1';
        url = url;
        
        weeks = jQuery('.bjqs-slide input:checkbox:checked').serialize();

        var values = {
            nav : 1,
            weeks : weeks,
            product_url : product_url,
        };

        jQuery('#ajax_loader'+id).show();
        try {
            jQuery.ajax( {
                url : url,
                dataType : 'json',
                data: ( values ),
                success : function(data) {
                    jQuery('#ajax_loader'+id).hide();
                    setAjaxData(data,false);          
